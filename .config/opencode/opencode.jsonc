{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "instructions": ["{env:HOME}/.config/opencode/INSTRUCTIONS.md"],
  "mcp": {
    "backstage": {
      "type": "remote",
      "url": "https://backstage.mcp.cfdata.org/mcp",
      "enabled": false,
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["bunx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false,
    },
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": true,
    },
    "cloudflare-builds": {
      "type": "remote",
      "url": "https://builds.mcp.cloudflare.com/mcp",
      "oauth": {},
      "enabled": false,
    },
    "cloudflare-observability": {
      "type": "remote",
      "url": "https://observability.mcp.cloudflare.com/mcp",
      "oauth": {},
      "enabled": false,
    },
    "gitlab": {
      "type": "remote",
      "url": "https://gitlab.mcp.cfdata.org/mcp",
      "enabled": false,
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
    },
    "jira": {
      "type": "remote",
      "url": "https://jira.mcp.cfdata.org/mcp",
      "enabled": false,
    },
    "wiki": {
      "type": "remote",
      "url": "https://wiki.mcp.cfdata.org/mcp",
      "enabled": false,
    },
  },
  "permission": {
    "bash": {
      "*": "ask",

      // Generic shell commands
      "cat *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "ls": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "which *": "allow",
      "whoami": "allow",

      // curl
      "curl -X DELETE *": "ask",
      "curl -X PATCH *": "ask",
      "curl -X POST *": "ask",
      "curl -X PUT *": "ask",

      // Git
      "git blame *": "allow",
      "git diff *": "allow",
      "git diff": "allow",
      "git log *": "allow",
      "git log": "allow",
      "git push *": "ask",
      "git push": "ask",
      "git show *": "allow",
      "git show": "allow",
      "git status *": "allow",
      "git status": "allow",

      // Github CLI
      "gh api --method DELETE *": "ask",
      "gh api --method PATCH *": "ask",
      "gh api --method POST *": "ask",
      "gh api --method PUT *": "ask",
      "gh api -X DELETE *": "ask",
      "gh api -X PATCH *": "ask",
      "gh api -X POST *": "ask",
      "gh api -X PUT *": "ask",
      "gh issue close *": "ask",
      "gh issue comment *": "ask",
      "gh issue create *": "ask",
      "gh issue edit *": "ask",
      "gh pr close *": "ask",
      "gh pr comment *": "ask",
      "gh pr create *": "ask",
      "gh pr merge *": "ask",
      "gh pr review *": "ask",

      // Node.js / npm
      "bun install": "ask",
      "bun publish *": "deny",
      "bun publish": "deny",
      "npm install": "ask",
      "npm publish *": "deny",
      "npm publish": "deny",
      "pnpm install": "ask",
      "pnpm publish *": "deny",
      "pnpm publish": "deny",
      "yarn install": "ask",
      "yarn publish *": "deny",
      "yarn publish": "deny",
    },
    "edit": "ask",
    "webfetch": "ask",
  },
  "theme": "lucent-orng",
}
